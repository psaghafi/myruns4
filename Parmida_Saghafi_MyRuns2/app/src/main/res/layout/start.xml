<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!-- -->
    <!-- Start tab fragment -->
    <!-- Input Type with a drop down menu  -->

    <TextView
        android:id="@+id/inputType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Input Type\n"

        />

    <Spinner
        android:id="@+id/spinnerInputType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/inputType"
        android:entries="@array/stringInputType"
        />


    <!-- Choose activity type  with drop down menu-->
    <TextView
        android:id="@+id/ActivityType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Activity Type\n"
        />
    <!-- -->

    <Spinner
        android:id="@+id/spinnerActivityType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ActivityType"
        android:entries="@array/stringActivityType"
        />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"/>
</LinearLayout>

